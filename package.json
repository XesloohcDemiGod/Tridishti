{
  "name": "tridishti",
  "displayName": "Tridishti",
  "description": "Code with threefold vision â€” knowledge, action, reflection",
  "version": "1.0.0",
  "author": {
    "name": "Tridishti Team",
    "email": "contact@tridishti.dev"
  },
  "publisher": "tridishti",
  "homepage": "https://github.com/XesloohcDemiGod/Tridishti#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/XesloohcDemiGod/Tridishti.git"
  },
  "bugs": {
    "url": "https://github.com/XesloohcDemiGod/Tridishti/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/XesloohcDemiGod"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rimraf out out-test __coverage__ *.vsix",
    "pretest": "npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\" \"*.{json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --pat $VSCE_PAT",
    "prepare": "npm run compile",
    "preversion": "npm run test:ci && npm run lint",
    "version": "npm run package && git add -A",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/test"],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": ["ts-jest", {
        "tsconfig": "tsconfig.test.json"
      }]
    },
    "moduleNameMapper": {
      "^vscode$": "<rootDir>/test/__mocks__/vscode.ts"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "__coverage__",
    "coverageReporters": ["text", "lcov", "html"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"]
  },
  "contributes": {
    "commands": [
      {
        "command": "tridishti.createSutra",
        "title": "Create Sutra"
      },
      {
        "command": "tridishti.createKarmaPhala",
        "title": "Create Karma Phala Milestone"
      },
      {
        "command": "tridishti.captureJnana",
        "title": "Capture Jnana"
      },
      {
        "command": "tridishti.checkDharma",
        "title": "Check Dharma Alignment"
      },
      {
        "command": "tridishti.showYatra",
        "title": "Show Current Yatra"
      },
      {
        "command": "tridishti.showDrishti",
        "title": "Show Drishti Dashboard"
      },
      {
        "command": "tridishti.atmaVichara",
        "title": "End Session (Atma Vichara)"
      }
    ],
    "configuration": {
      "title": "Tridishti",
      "properties": {
        "tridishti.enabled": {
          "type": "boolean",
          "default": true
        },
        "tridishti.checkpointInterval": {
          "type": "number",
          "default": 30
        },
        "tridishti.milestoneThreshold": {
          "type": "number",
          "default": 120
        },
        "tridishti.scopeCheckInterval": {
          "type": "number",
          "default": 60
        },
        "tridishti.fileChangeThreshold": {
          "type": "number",
          "default": 10
        },
        "tridishti.nudgeStrategy": {
          "type": "string",
          "enum": [
            "default",
            "deep-work",
            "exploration",
            "maintenance"
          ],
          "default": "default"
        },
        "tridishti.autoCommit": {
          "type": "boolean",
          "default": false
        },
        "tridishti.autoTag": {
          "type": "boolean",
          "default": false
        },
        "tridishti.learningCategories": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "insight",
              "gotcha",
              "pattern",
              "solution",
              "question"
            ]
          },
          "default": [
            "insight",
            "gotcha",
            "pattern",
            "solution",
            "question"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0"
  }
}
